            <section class="content-body">
                <h3>Add Product</h3>
       <form id="productForm" method="post" action="/admin/product" enctype="multipart/form-data">
    <div class="form-row">
        <div>
            <label>Product Name</label>
            <input type="text" id="productName" name="productName" placeholder="Enter product name">
        </div>
        <div>
            <label>Category</label>
             <select name="category" id="category">
                <%for(let i=0;i<cat.length;i++){%>
                    <option value="<%=cat[i].name%>"><%=cat[i].name%></option>
                    <%=cat[i].name%>
                    <%}%>
             </select>
        </div>
    </div>

    <div class="form-row full-width">
        <div>
            <label>Description</label>
            <textarea name="description" id="description" placeholder="Enter product description"></textarea>
        </div>
    </div>

    <div class="form-row">
        <div>
            <label>Regular Price</label>
            <input type="number" id="regularPrice" name="regularPrice" placeholder="0.00">
        </div>
        <div>
            <label>Sale Price</label>
            <input type="number" id="salesPrice" name="salesPrice" placeholder="0.00">
        </div>
    </div>

    <div class="form-row">
        <div>
            <label>Quantity</label>
            <input type="number" id="quantity" name="quantity" placeholder="Enter quantity">
        </div>
    </div>

    <div class="image-upload-section">
        <h3>Product Images</h3>
        <div class="upload-group" style="border: 1px solid #ccc; padding: 15px;">
            <label>Product Image 1:</label>
            <input type="file" name="productimage" class="imageInput" data-index="0" accept="image/*">
            <div class="crop-wrapper" id="wrapper-0" style="display: flex; gap: 20px; margin-top: 10px;"></div>
        </div>

        <div class="upload-group" style="border: 1px solid #ccc; padding: 15px;">
            <label>Product Image 2:</label>
            <input type="file" name="productimage" class="imageInput" data-index="1" accept="image/*">
            <div class="crop-wrapper" id="wrapper-1" style="display: flex; gap: 20px; margin-top: 10px;"></div>
        </div>

        <div class="upload-group"  style="border: 1px solid #ccc; padding: 15px;">
            <label>Product Image 3:</label>
            <input type="file"name="productimage" class="imageInput" data-index="2" accept="image/*">
            <div class="crop-wrapper" id="wrapper-2" style="display: flex; gap: 20px; margin-top: 10px;"></div>
        </div>
    </div>
     <div id="formError" class="error-message full-width"></div>
    <div class="submit-container">
        <button type="submit" class="btn-save">Save Product</button>
    </div>
</form>
    </section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>
<script>
    const form = document.getElementById("productForm");
    const imageInputs = document.querySelectorAll(".imageInput");
    
    let finalBlobs = [null, null, null]; 
    let croppers = [null, null, null];

    imageInputs.forEach(input => {
        input.addEventListener("change", (e) => {
            const index = e.target.getAttribute("data-index");
            const wrapper = document.getElementById(`wrapper-${index}`);
            const file = e.target.files[0];

            if (!file) return;

            wrapper.innerHTML = "";
            if (croppers[index]) {
                croppers[index].destroy();
                croppers[index] = null;
            }

            const reader = new FileReader();
            reader.onload = (event) => {
                const imgDiv = document.createElement("div");
                imgDiv.id = `img-container-${index}`;
                imgDiv.style.width = "300px";
                
                const img = document.createElement("img");
                img.src = event.target.result;
                img.style.maxWidth = "100%";
                imgDiv.appendChild(img);

                const controlDiv = document.createElement("div");
                controlDiv.style.display = "flex";
                controlDiv.style.flexDirection = "column";
                controlDiv.style.gap = "10px";

                const saveBtn = document.createElement("button");
                saveBtn.innerText = "Confirm Crop";
                saveBtn.type = "button";
                saveBtn.style.cssText = "background: #007bff; color: white; padding: 5px 10px; border: none; cursor: pointer;";

                const previewImg = document.createElement("img");
                previewImg.style.cssText = "max-width: 150px; display: none; border: 2px solid #28a745; border-radius: 4px;";

                controlDiv.appendChild(saveBtn);
                controlDiv.appendChild(previewImg);

                wrapper.appendChild(imgDiv);
                wrapper.appendChild(controlDiv);

                croppers[index] = new Cropper(img, {
                    aspectRatio: 1,
                    viewMode: 1
                });
               saveBtn.addEventListener("click", () => {
    if (croppers[index]) {
        const canvas = croppers[index].getCroppedCanvas({ width: 440, height: 440 });
        previewImg.src = canvas.toDataURL("image/jpeg");
        previewImg.style.display = "block";
        croppers[index].destroy();
        croppers[index] = null;
        imgDiv.style.border = "1px solid #ccc"; 
        imgDiv.style.opacity = "0.8";

        canvas.toBlob((blob) => {
            finalBlobs[index] = blob;
        }, "image/jpeg");

        saveBtn.innerText = "Saved ";
        saveBtn.style.background = "#28a745";
        saveBtn.disabled = true; 
    }
});
            };
            reader.readAsDataURL(file);
        });
    });
    
    const addProduct=document.querySelector('form');
    const productName=document.getElementById('productName');
    const category=document.getElementById('category');
    const description=document.getElementById('description');
    const regularPrice=document.getElementById('regularPrice');
    const salesPrice=document.getElementById('salesPrice');
    const quantity=document.getElementById('quantity');
    const formError=document.getElementById('formError');

    addProduct.addEventListener('submit',function(e){
        if(productName.value.trim()===''||
           description.value.trim()===''||
           regularPrice.value.trim()===''||
           salesPrice.value.trim()===''||
           quantity.value.trim()===''
        ){
            e.preventDefault();
            formError.innerHTML='Please fill the details';
            formError.style.display='block'
        }else{
            formError.innerHTML='';
            formError.style.display='none'
        }
    })

</script>
