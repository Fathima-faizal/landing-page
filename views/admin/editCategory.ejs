            <section class="content-body">
                <h3>Edit Category</h3>
                <form id="productForm" action="/admin/editCategory/<%=category._id%>" method="post" onsubmit="return handleFormsubmit(event)">
    <div class="form-row">
        <div>
            <label>Category Name</label>
            <input type="text"id="name" name="name" value="<%=category.name%>" placeholder="Enter Category name">
        </div>
        <div>
            <label>Description</label>
            <textarea type="text" id="description" name="description" placeholder="Enter Description" rows="3"><%= category.description %></textarea>
        </div>
    </div>
    <div class="submit-container">
        <button type="submit" class="btn-save">Save Product</button>
    </div>
</form>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function handleFormsubmit(event){
    event.preventDefault();
    if(!validataForm()){
        return 
    }
    const name=document.getElementsByName('name')[0].value;
    const description=document.getElementsByName('description')[0].value
    fetch('/admin/category',{
        method:'POST',
        headers:{
            'content-type':`application/json`
        },
        body:JSON.stringify({name,description})
    })
    .then(response=>{
        if(!response.ok){
            return response.json().then(err=>{
                throw new Error(err.error);
            })
        }
        return response.json();
    })
    .then(data=>{
        location.reload();
    })
    .catch(error=>{
        if(error.message==='Category already Exists'){
            swal.fire({
                icon:'error',
                title:'Oops',
                text:'Category already Exists'
            })
        }else{
            swal.fire({
                icon:'error',
                title:'Oops',
                text:'An error occured while adding the category',
            })
        }
    })
}

function validataForm(){
    clearErrorMessages();
    const name=document.getElementById('name').value.trim();
    const description=document.getElementById('description')[0].value.trim()
    isValid=true
}
if(name==''){
    displayErrorMessage('name-error','Please enter a name');
    isValid=false
}else if(!/^[a-zA-Z\s]+$/.test(name)){
      displayErrorMessage('name-error','Category name should Contain only alphabetic characters');
      isValid=false
}
if(description==''){
    displayErrorMessage('descripiton-error','Please enter a description');
    isvalid=false
}
return isValid;
function displayErrorMessage(elementId,message){
     var errorElement=document.getElementById(elementId);
     errorElement.innerHTML=message;
     errorElement.style.displey='black';
}
function clearErrorMessages(){
    const errorElements=document.getElementsByClassName('error-message');
    Array.form(errorElements).forEach(element => {
        element.innerText='',
        element.style.displey='none'
    });
}

</script>

