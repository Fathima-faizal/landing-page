<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Admin Dashboard</title>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>

    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="nav-item ">
                <a href="/admin/dashboard">
                <i class="fas fa-th-large"></i> <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item active">
                <a href="/admin/product">
                <i class="fas fa-box"></i> <span>Product Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#">
                <i class="fas fa-shopping-cart"></i> <span>Order Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/customer">
                <i class="fas fa-user"></i> <span>User Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#">
                <i class="fas fa-comment-alt"></i> <span>Review</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#">
                <i class="fas fa-truck"></i> <span>Order</span>
                </a>
            </div>
            
            <hr class="nav-divider">

            <div class="nav-item">
                <a href="#">
                <i class="fas fa-ticket-alt"></i> <span>Coupon</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/category">
                <i class="fas fa-layer-group"></i> <span>Category Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#">
                <i class="fas fa-image"></i> <span>Banner Management</span>
                </a>
            </div>
            <div class="nav-item logout-btn">
                <a href="/admin/logout">
                <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
                </a>
            </div>
        </aside>

        <main class="main-content">
            <header class="top-header">
                <h2>Product Management</h2>
                <a href="/admin/logout">
                <button class="logout-top">Log out</button>
                </a>
            </header>
            <section class="content-body">
                <div class="toolbar">
                    <form action="/admin/product" method="get">
                    <div class="search-box">
                        <input type="text" name="search" placeholder="Search">
                        <button class="btn-clear">Clear</button>
                        </form>
                       
                    </div>
                     <a href="/admin/addProduct"><button class="btn-add">Add new Product</button></a>
                </div>

                <table class="user-table">
                    <thead>
                        <tr>
                            <th>ProductName</th>
                            
                            <th>Category</th>
                            <th>Regular Price</th>
                            <th>Sales Price</th>
                            <th>Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                   <tbody>
    <% for(let i=0; i < data.length; i++) { %> <tr>
        <td><%= data[i].productName %></td>
        <td><%= data[i].category  %></td>
        <td><%= data[i].regularPrice %></td> <td><%= data[i].salesPrice %></td>   <td><%= data[i].quantity %></td>
        <td class="actions">
            <% if(data[i].isBlocked === false) { %>
                <a href="/admin/blockProduct?id=<%=data[i]._id%>">
                    <button class="btn-block">Block</button>
                </a>
            <% } else { %>
                <a href="/admin/unblockProduct?id=<%=data[i]._id%>">
                    <button class="btn-unblock">Unblock</button>
                </a>
            <% } %>
            <a href="/admin/editProduct/<%= data[i]._id %>">
    <i class="fa-regular fa-pen-to-square" style="color: black; margin-top: 5px;"></i>
</a>
             <a href="/admin/deleteProduct?id=<%=data[i]._id%>" onclick="return confirmDelete(event, '<%=data[i].productName%>')">
             <i class="fa-regular fa-trash-can" style="color:red;margin-top: 5px;"></i>
           </a>
        </td>
       
    </tr>
    <% } %>
    
</tbody>
                </table>
                <div class="container">
                    <nav aria-label="page navigation">
                        <ul class="pagination justify-cotent-center mb-20"style="margin-right:20px";>
                            <%for(let i=1;i<=totalPages;i++){%>
                                <li class="page-item <%=(i===currentPage)? 'active':''%>">
                                 <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                                </li>
                                <%}%>
                        </ul>
                    </nav>
                </div>
            </section>
        </main>
    </div>
   <script>
    window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            window.location.reload();
        }
    });
    window.history.pushState(null, null, window.location.href);
    window.onpopstate = function () {
        window.history.go(1);
    };
function confirmDelete(event, productName) {
    if (!confirm(`Are you sure you want to delete "${productName}"?`)) {
        event.preventDefault(); // Stops the link from opening
        return false;
    }
    return true;
}

</script>
</body>
</html>