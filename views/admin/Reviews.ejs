<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Admin Dashboard</title>
   <link rel="stylesheet" href="/css/reviews.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="nav-item ">
                <a href="/admin/dashboard">
                <i class="fas fa-th-large"></i> <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item ">
                <a href="/admin/product">
                <i class="fas fa-box"></i> <span>Product Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/orderManagement">
                <i class="fas fa-shopping-cart"></i> <span>Order Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/customer">
                <i class="fas fa-user"></i> <span>User Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/category">
                <i class="fas fa-layer-group"></i> <span>Category Management</span>
                </a>
            </div>
           <div class="nav-item">
                <a href="#">
                <i class="fas fa-image"></i> <span>Banner Management</span>
                </a>
            </div>
            <hr class="nav-divider">

            <div class="nav-item">
                <a href="#">
              <i class="fas fa-ticket-alt"></i>  <span>Coupon</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/brand">
              <i class="fa-solid fa-tags"></i> <span>Brand</span>
                </a>
            </div>
             <div class="nav-item active">
                <a href="/admin/Reviews">
                <i class="fas fa-comment-alt"></i> <span>Review</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/Contact">
                 <i class="fa-solid fa-envelope"></i> <span>Contact us</span>
                </a>
            </div>
        </aside>

        <main class="main-content">
            <header class="top-header">
                <h2>Product Management</h2>
                <a href="/admin/logout">
                <button class="logout-top">Log out</button>
                </a>
            </header>
            <section class="content-body">
                <div class="toolbar">
                    <form action="/admin/Reviews" method="get">
                    <div class="search-box">
                        <input type="text" name="search" placeholder="Search">
                        <button class="btn-clear">Clear</button>
                </div>
                    </form>
                </div>
               <div class="review-container">
    <table class="review-table">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (reviews.length > 0) { %>
                <% reviews.forEach(rev => { %>
                    <% rev.orderedItems.forEach(item => { %>
                        <% if (item.review && item.review.isReviewed) { %>
                            <tr id="row-<%= rev._id %>">
                                <td><%= rev.userId ? rev.userId.name : 'Unknown' %><br>
                                    <small><%= rev.userId ? rev.userId.email : '' %></small>
                                </td>
                                <td>
                                    <div class="stars">
                                        <% for(let i=1; i<=5; i++) { %>
                                            <i class="fa-star <%= i <= item.review.rating ? 'fas' : 'far' %>"></i>
                                        <% } %>
                                    </div>
                                </td>
                                <td><%= item.review.comment %></td>
                                <td>
                                <a href="/admin/deletereview?orderId=<%= rev._id %>&itemId=<%= item._id %>" 
                                onclick="return confirmDelete(event, 'this review')">
                           <i class="fa-regular fa-trash-can" style="color:red; margin-top: 5px;"></i>
                              </a>
                                </td>
                            </tr>
                        <% } %>
                    <% }) %>
                <% }) %>
            <% } else { %>
                <tr><td colspan="5">No reviews found.</td></tr>
            <% } %>
        </tbody>
    </table>
</div> <div class="pagination-container" style="margin-top: 20px;">
    <nav aria-label="page navigation">
        <ul class="pagination justify-content-center">
            <% for(let i=1; i<=totalPages; i++) { %>
                <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>
               
            </section>
        </main>
    </div>
   <script>
    window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            window.location.reload();
        }
    });
    window.history.pushState(null, null, window.location.href);
    window.onpopstate = function () {
        window.history.go(1);
    };
function confirmDelete(event, productName) {
    if (!confirm(`Are you sure you want to delete "${productName}"?`)) {
        event.preventDefault(); // Stops the link from opening
        return false;
    }
    return true;
}

</script>
</body>
</html>