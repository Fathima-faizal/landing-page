<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Admin Dashboard</title>
   <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="nav-item ">
                <a href="/admin/dashboard">
                <i class="fas fa-th-large"></i> <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item ">
                <a href="/admin/product">
                <i class="fas fa-box"></i> <span>Product Management</span>
                </a>
            </div>
            <div class="nav-item active">
                <a href="/admin/orderManagement">
                <i class="fas fa-shopping-cart"></i> <span>Order Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/customer">
                <i class="fas fa-user"></i> <span>User Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/category">
                <i class="fas fa-layer-group"></i> <span>Category Management</span>
                </a>
            </div>
           <div class="nav-item">
                <a href="#">
                <i class="fas fa-image"></i> <span>Banner Management</span>
                </a>
            </div>
            <hr class="nav-divider">

            <div class="nav-item">
                <a href="#">
              <i class="fas fa-ticket-alt"></i>  <span>Coupon</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/brand">
              <i class="fa-solid fa-tags"></i> <span>Brand</span>
                </a>
            </div>
             <div class="nav-item">
                <a href="/admin/Reviews">
                <i class="fas fa-comment-alt"></i> <span>Review</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/Contact">
                 <i class="fa-solid fa-envelope"></i> <span>Contact us</span>
                </a>
            </div>
        </aside>

        <main class="main-content">
            <header class="top-header">
                <h2>Product Management</h2>
                <a href="/admin/logout">
                <button class="logout-top">Log out</button>
                </a>
            </header>
            <section class="content-body">
                <div class="toolbar">
                    <form action="/admin/orderManagement" method="get">
                    <div class="search-box">
                        <input type="text" name="search" placeholder="Search">
                        <button class="btn-clear">Clear</button>
                </div>
                       <select name="status" class="status" onchange="this.form.submit()">
                <option value="">All Status</option>
                <% ['pending', 'shipped', 'delivered', 'cancelled'].forEach(s => { %>
                    <option value="<%= s %>" <%= statusFilter === s ? 'selected' : '' %>><%= s.toUpperCase() %></option>
                <% }) %>
            </select>
                    </form>
                </div>

                <table class="user-table">
                    <thead>
                        <tr>
                            <th>OrderId</th>
                            <th>Date</th>
                            <th>User</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                   <tbody>
   <% orders.forEach(order => { %>
                <tr>
                    <td>#<%= order.orderId %></td>
                    <td><%= new Date(order.createdOn).toLocaleDateString() %></td>
                    <td><%= order.userId ? order.userId.name : 'Guest' %><br>
                        <%=order.userId? order.userId.email:'Guest'%></td>
                    <td>
                        <select onchange="changeStatus('<%= order._id %>', this.value)" class="status-select">
                            <% ['pending', 'shipped', 'delivered', 'cancelled'].forEach(s => { %>
                                <option value="<%= s %>" <%= order.status === s ? 'selected' : '' %>><%= s %></option>
                            <% }) %>
                        </select>
                    </td>
                    <td>
                        <a href="/admin/Views/<%= order._id %>" class="btn-view">View Detail</a>
                    </td>
                </tr>
            <% }) %>
    
</tbody>
                </table>
                <div class="container">
                    <nav aria-label="page navigation">
                        <ul class="pagination justify-cotent-center mb-20"style="margin-right:20px";>
                            <%for(let i=1;i<=totalPages;i++){%>
                                <li class="page-item <%=(i===currentPage)? 'active':''%>">
                                 <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                                </li>
                                <%}%>
                        </ul>
                    </nav>
                </div>
            </section>
        </main>
    </div>
   <script>
    window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            window.location.reload();
        }
    });
    window.history.pushState(null, null, window.location.href);
    window.onpopstate = function () {
        window.history.go(1);
    };
function changeStatus(orderId, newStatus) {
    Swal.fire({
        title: 'Update Status?',
        text: `Change order status to ${newStatus}?`,
        icon: 'question',
        showCancelButton: true
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/updateStatus/${orderId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ status: newStatus })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    Swal.fire('Updated!', data.message, 'success');
                    location.reload();
                } else {
                    Swal.fire('Error', data.message, 'error');
                }
            });
        }
    });
}
</script>
</body>
</html>