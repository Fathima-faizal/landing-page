            <section class="content-body">
                <h3>Edit Product</h3>
      <form id="productForm" method="post" action="/admin/editProduct/<%= product._id %>" enctype="multipart/form-data">
    <div class="form-row">
        <div>
            <label>Product Name</label>
            <input type="text" name="productName" value="<%= product.productName %>" placeholder="Enter product name" >
        </div>
        <div>
    <label>Category</label>
    <select name="category" required>
        <% for(let i=0; i < cat.length; i++) { %>
            <option value="<%= cat[i]._id %>" 
                <%= product.category && product.category._id.toString() === cat[i]._id.toString() ? 'selected' : '' %>>
                <%= cat[i].name %>
            </option>
        <% } %>
    </select>
    
</div>
    </div>

    <div class="form-row full-width">
        <div>
            <label>Description</label>
           <textarea name="description"><%= product.description %></textarea>
        </div>
    </div>

    <div class="form-row">
        <div>
            <label>Brand</label>
    <select name="brand" required>
    <%for(let i=0;i<brand.length;i++){%>
    <option value="<%=brand[i].name%>">
        
         <%=brand[i].name%>
    </option>
    <%}%>
    </select>
        </div>
        <div>
            <label>Regular Price</label>
            <input type="number" name="regularPrice" value="<%= product.regularPrice %>" placeholder="0.00" required>
        </div>
        
    </div>

    <div class="form-row">
        <div>
            <label>Sale Price</label>
            <input type="number" name="salesPrice" value="<%= product.salesPrice %>" placeholder="0.00" required>
        </div>
        <div>
            <label>Quantity</label>
            <input type="number" name="quantity" value="<%= product.quantity %>" placeholder="Enter quantity" required>
        </div>
    </div>

    <div class="image-upload-section">
        <h3>Current Images</h3>
       <div class="current-images-container" style="display: flex; gap: 15px; margin-bottom: 20px;">
    <% if (product.productimage && product.productimage.length > 0) { %>
        <% product.productimage.forEach((img, index) => { %>
            <div class="image-preview" id="image-container-<%= index %>" style="position: relative; text-align: center;">
                <img src="/uploads/<%= img %>" alt="<%= img %>" style="width: 100px; height: 100px; object-fit: cover; border: 1px solid #ddd;">
                <br>
                <button type="button" onclick="removeCurrentImage('<%= img %>', '<%= index %>')" style="color: white; background-color: red; border: none; padding: 5px 10px; cursor: pointer;">Remove</button>
            </div>
        <% }) %>
    <% } else { %>
        <p>No images found for this product.</p>
    <% } %>
</div>
        
       <input type="hidden" name="removedImages" id="removedImages" value="[]">
       <hr>
        <h3>Product Images</h3>
        <div class="upload-group" style="border: 1px solid #ccc; padding: 15px;">
            <label>Product Image 1:</label>
            <input type="file" name="productimage" class="imageInput" data-index="0" accept="image/*" required>
            <div class="crop-wrapper" id="wrapper-0" style="display: flex; gap: 20px; margin-top: 10px;"></div>
        </div>

        <div class="upload-group" style="border: 1px solid #ccc; padding: 15px;">
            <label>Product Image 2:</label>
            <input type="file" name="productimage" class="imageInput" data-index="1" accept="image/*" required>
            <div class="crop-wrapper" id="wrapper-1" style="display: flex; gap: 20px; margin-top: 10px;"></div>
        </div>

        <div class="upload-group" style="border: 1px solid #ccc; padding: 15px;">
            <label>Product Image 3:</label>
            <input type="file" name="productimage" class="imageInput" data-index="2" accept="image/*" required>
            <div class="crop-wrapper" id="wrapper-2" style="display: flex; gap: 20px; margin-top: 10px;"></div>
        </div>

         <div class="upload-group" style="border: 1px solid #ccc; padding: 15px;">
            <label>Product Image 4:</label>
            <input type="file" name="productimage" class="imageInput" data-index="3" accept="image/*" required>
            <div class="crop-wrapper" id="wrapper-3" style="display: flex; gap: 20px; margin-top: 10px;"></div>
        </div>
    </div>

    <div class="submit-container">
        <button type="submit" class="btn-save">Save Product</button>
    </div>
</form>
    </section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>
<script>
   const form = document.getElementById("productForm");
    const imageInputs = document.querySelectorAll(".imageInput");
    
    let finalBlobs = [null, null, null,null]; 
    let croppers = [null, null, null,null];

    imageInputs.forEach(input => {
        input.addEventListener("change", (e) => {
            const index = e.target.getAttribute("data-index");
            const wrapper = document.getElementById(`wrapper-${index}`);
            const file = e.target.files[0];

            if (!file) return;

            wrapper.innerHTML = "";
            if (croppers[index]) {
                croppers[index].destroy();
                croppers[index] = null;
            }

            const reader = new FileReader();
            reader.onload = (event) => {
                const imgDiv = document.createElement("div");
                imgDiv.id = `img-container-${index}`; 
                imgDiv.style.width = "300px";
                
                const img = document.createElement("img");
                img.src = event.target.result;
                img.style.maxWidth = "100%";
                imgDiv.appendChild(img);

                const controlDiv = document.createElement("div");
                controlDiv.style.display = "flex";
                controlDiv.style.flexDirection = "column";
                controlDiv.style.gap = "10px";

                const saveBtn = document.createElement("button");
                saveBtn.innerText = "Confirm Crop";
                saveBtn.type = "button";
                saveBtn.style.cssText = "background: #007bff; color: white; padding: 5px 10px; border: none; cursor: pointer;";

                const previewImg = document.createElement("img");
                previewImg.style.cssText = "max-width: 150px; display: none; border: 2px solid #28a745; border-radius: 4px;";

                controlDiv.appendChild(saveBtn);
                controlDiv.appendChild(previewImg);

                wrapper.appendChild(imgDiv);
                wrapper.appendChild(controlDiv);

                croppers[index] = new Cropper(img, {
                    aspectRatio: 1,
                    viewMode: 1
                });

              saveBtn.addEventListener("click", () => {
    if (croppers[index]) {
        const canvas = croppers[index].getCroppedCanvas({ width: 440, height: 440 });
        previewImg.src = canvas.toDataURL("image/jpeg");
        previewImg.style.display = "block";
        croppers[index].destroy();
        croppers[index] = null;
        canvas.toBlob((blob) => {
            if (blob) {
                finalBlobs[index] = blob;
                console.log(`Image ${index} successfully converted to blob`);
                imgDiv.style.opacity = "0.5";
                saveBtn.innerText = "Saved ";
                saveBtn.style.background = "#28a745";
                saveBtn.disabled = true;
            }
        }, "image/jpeg", 0.9); 
    }
});
            };
            reader.readAsDataURL(file);
        });
    });

       let removedImagesArray = [];

function removeCurrentImage(imageName, index) {
    if (confirm("'Are you sure you want to delete this image?'")) {
        removedImagesArray.push(imageName);
    
        document.getElementById('removedImages').value = JSON.stringify(removedImagesArray);
       
        document.getElementById(`image-container-${index}`).style.display = 'none';
    }
}
form.addEventListener("submit", async (e) => {
  e.preventDefault();

  const formData = new FormData(form);

  // remove normal file inputs
  formData.delete("productimage");

  imageInputs.forEach((input, index) => {
    const file = input.files[0];

    if (finalBlobs[index]) {
      // use cropped image
      const fileName = `cropped-${Date.now()}-${index}.jpg`;
      formData.append("productimage", finalBlobs[index], fileName);
    } 
    else if (file) {
      // use original image if not cropped
      formData.append("productimage", file);
    }
  });

  try {
    const response = await fetch(form.action, {
      method: "POST",
      body: formData
    });

    if (response.redirected) {
      window.location.href = response.url;
    } else {
      const result = await response.json();
      alert(result.message || "Updated successfully");
    }
  } catch (error) {
    console.error("Submission error:", error);
    alert("Something went wrong during upload");
  }
});


</script>
</body>
