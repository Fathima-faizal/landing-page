<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Admin Dashboard</title>
    <link rel="stylesheet" href="/css/customer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>

    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="nav-item ">
                <a href="/admin/dashboard">
                <i class="fas fa-th-large"></i> <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/product">
                <i class="fas fa-box"></i> <span>Product Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#">
                <i class="fas fa-shopping-cart"></i> <span>Order Management</span>
                </a>
            </div>
            <div class="nav-item active">
                <a href="/admin/customer">
                <i class="fas fa-user"></i> <span>User Management</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/category">
                <i class="fas fa-layer-group"></i> <span>Category Management</span>
                </a>
            </div> 
            <div class="nav-item">
                <a href="#">
                <i class="fas fa-image"></i> <span>Banner Management</span>
                </a>
            </div>

            <hr class="nav-divider">

            <div class="nav-item">
                <a href="#">
                <i class="fas fa-ticket-alt"></i> <span>Coupon</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/brand">
               <i class="fa-solid fa-tags"></i><span>Brand</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#">
                <i class="fas fa-comment-alt"></i> <span>Review</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#">
               <i class="fa-solid fa-envelope"></i> <span>Contact us</span>
                </a>
            </div>
        </aside>

        <main class="main-content">
            <header class="top-header">
                <h2>User Management</h2>
                <a href="/admin/logout">
                <button class="logout-top">Log out</button>
                </a>
            </header>
            <section class="content-body">
                <div class="toolbar">
                    <form action="/admin/customer" method="get">
                    <div class="search-box">
                        <input type="text" name="search" placeholder="Search">
                        <button class="btn-clear">Clear</button>
                        </form>
                    </div>
                </div>

                <table class="user-table">
                    <thead>
                        <tr>
                            <th>User Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let i=0;i<data.length;i++){%>
                        <tr>
                            <td><%=data[i]._id%></td>
                            <td><%=data[i].name%></td>
                            <td><%=data[i].email%></td>
                            <td class="actions">
                                <%if(data[i].isBlocked===false){%>
                               <a href="/admin/blockCustomer?id=<%=data[i]._id%>"><button class="btn-block">block</button></a>
                                <%}else{%>
                               <a href="/admin/unblockCustomer?id=<%=data[i]._id%>"> <button class="btn-unblock">Unblock</button></a>
                                <%}%>
                            </td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
                <div class="container">
                    <nav aria-label="page navigation">
                        <ul class="pagination justify-cotent-center mb-20"style="margin-right:20px";>
                            <%for(let i=1;i<=totalPages;i++){%>
                                <li class="page-item <%=(i===currentPage)? 'active':''%>">
                                 <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                                </li>
                                <%}%>
                        </ul>
                    </nav>
                </div>
            </section>
        </main>
    </div>
   <script>
    window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            window.location.reload();
        }
    });
    window.history.pushState(null, null, window.location.href);
    window.onpopstate = function () {
        window.history.go(1);
    };
</script>
</body>
</html>