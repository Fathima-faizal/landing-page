<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VisionVogue - Profile</title>
    <link rel="stylesheet" href="css/wallet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    <header class="navbar">
        <nav class="nav-links">
            <a href="/home">Home</a>
            <a href="/shop">shop</a>
            <a href="#">About</a>
            <a href="#">Contact us</a>
        </nav>
        <div class="logo">VisionVogue</div>
        <div class="nav-icons">
             <a href="/wishlist" ><i class="fa-regular fa-heart"></i></a>
               <a href="/cart"> <i class="fa-solid fa-cart-shopping"></i></a>
              <a href="/profile" > <i class="fa-regular fa-user"></i></a>
    </header>

    <main class="profile-container">
        <h1>Wallet</h1>
        
        <div class="content-wrapper">
            <aside class="sidebar">
                <h3>My Account</h3>
                <ul>
                   <a href="/profile"><li >Profile</li></a>
                   <a href="/address"> <li>Address</li> </a>
                   <a href="/order"><li>Order</li> </a>
                   <a href="/wallet"><li class="active">Wallet</li> </a>
                   <a href="/coupon"> <li>Coupon</li> </a>
                   <a href="/refer" ><li>Refer & Earn</li> </a>
                   <a href="/changePassword"><li>Change Password</li> </a>
                   <a href="/Contact"><li>Contact us</li> </a>
                   <a href="/logout"><li>Log out</li> </a>
                </ul>
            </aside>

            <section class="profile-card">
               <div class="wallet-card">
        <h2>My Wallet</h2>
        <div class="balance-section">
            <p>Available Balance</p>
            <h3>₹<%= walletBalance.toFixed(2) %></h3>
            <div class="add-money-box">
        <input type="number" id="addAmount" placeholder="Enter Amount" min="1">
        <button onclick="addMoney()" class="add-btn">Add Money</button>
    </div>
        </div>
        
        <div class="transaction-history">
            <h4>Recent Transactions</h4>
            <% if (transactions.length > 0) { %>
                <table class="transaction-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transactions.reverse().forEach(t => { %>
                            <tr>
                                <td><%= new Date(t.date).toLocaleDateString() %></td>
                                <td><%= t.description %></td>
                                <td class="<%= t.type === 'credit' ? 'text-success' : 'text-danger' %>">
                                    <%= t.type === 'credit' ? '+' : '-' %> ₹<%= t.amount %>
                                </td>
                                <td><span class="status-tag"><%= t.status %></span></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No transactions found.</p>
            <% } %>
        </div>
    </div>

            </section>
        </div>
        <div class="container">
                    <nav aria-label="page navigation">
                        <ul class="pagination justify-cotent-center mb-20"style="margin-right:20px";>
                            <%for(let i=1;i<=totalPages;i++){%>
                                <li class="page-item <%=(i===currentPage)? 'active':''%>">
                                 <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                                <%}%>
                        </ul>
                    </nav>
                </div>
    </main>

    <footer class="footer">
        <div class="footer-columns">
            <div class="col">
                <h4>About Us:</h4>
                <p>Our Story</p><p>Privacy Policy</p><p>Terms</p><p>FAQ</p>
            </div>
            <div class="col">
                <h4>Support:</h4>
                <p>Shipping Policy</p><p>Returns</p><p>Order Tracking</p><p>Help</p>
            </div>
            <div class="col">
                <h4>My Account:</h4>
                <p>Profile</p><p>My Orders</p><p>Wishlist</p><p>Refer & Earn</p>
            </div>
            <div class="col">
                <h4>Contact:</h4>
                <p>Email: visionvogue@gmail.com</p>
                <p>Phone: 8923457190</p>
            </div>
        </div>
        <p class="copyright">© 2026 Eyewear Store. All rights reserved.</p>
    </footer>
 <script>
    window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            window.location.reload();
        }
    });
    window.history.pushState(null, null, window.location.href);
    window.onpopstate = function () {
        window.history.go(1);
    };
    function addMoney() {
    const amount = document.getElementById('addAmount').value;

    if (!amount || amount <= 0) {
        Swal.fire("Error", "Please enter a valid amount", "error");
        return;
    }

    $.ajax({
        url: '/addMoney',
        method: 'POST',
        data: { amount: amount },
        success: (response) => {
            if (response.status) {
                Swal.fire("Success", "Money added successfully", "success").then(() => {
                    window.location.reload();
                });
            } else {
                Swal.fire("Error", response.message, "error");
            }
        }
    });
}

</script>
</body>
</html>