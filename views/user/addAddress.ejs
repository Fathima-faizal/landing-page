            </aside>
            <section class="form-content">
                <div class="form-card">
                    <form method="post" action="/addAddress">
                        <div class="form-grid">
                            <input type="text" name="address" placeholder="Address" class="full-width" autocomplete="off">
                            <input type="text" name="houseName" placeholder="House Name" autocomplete="off">
                            <input type="text" name="street" placeholder="Street" autocomplete="off">
                            <input type="text" name="landmark" placeholder="Landmark" class="full-width" autocomplete="off">
                            <input type="text" name="city" placeholder="City" autocomplete="off">
                            <input type="text" name="zipCode" placeholder="Zip code" autocomplete="off">
                            <input type="text" name="country" placeholder="country" class="full-width" autocomplete="off">
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn-update">Update</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </main>

