    <script >
        const nameid=document.getElementById('name');
        const emailid=document.getElementById('email');
        const passwordid=document.getElementById('password');
        const ConformPasswordid=document.getElementById('ConformPassword');
        const error1=document.getElementById('error1');
        const error2=document.getElementById('error2');
        const error3=document.getElementById('error3');
        const error4=document.getElementById('error4');
        const signform=document.getElementById('signform');
        const mainError = document.getElementById('main-error');
        

        function nameValidateChacking(e){
          const nameval=nameid.value;
          const namepattern=/^[A-Za-z\s]+$/;
          if(nameval.trim()===''){
            error1.style.display='block';
            error1.innerHTML='Please enter a valid name'
          }else if(!namepattern.test(nameval)){
            error1.style.display='block',
            error1.innerHTML=' Name can only contain alphabets and spaces'
          }else{
            error1.style.display='none';
            error1.innerHTML=''
          }
        }
        function emailValidateChacking(e){
            const emailval=emailid.value;
            const emailpattern=/^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$/;
            if(emailval.trim()===''){
                error2.style.display='block';
                error2.innerHTML='Please Invalid format'
            }else if(!emailpattern.test(emailval)){
               error2.style.display='block';
               error2.innerHTML='Invalid format'
            }else{
                error2.style.display='none',
                error2.innerHTML=''
            }
        }
        
        function passwordValidateChacking(e){
            const passwordval=passwordid.value;
            const alpha=/[a-zA-Z]/;
            const digit=/\d/;
             if(passwordval.trim()===''){
                error3.style.display='block',
                error3.innerHTML='Please enter the Password'
             }else if(passwordval.length<8){
                error3.style.display='block';
                error3.innerHTML='should contain atleast 8 characters'
            }else if(!alpha.test(passwordval)||!digit.test(passwordval)){
                error3.style.display='block',
                error3.innerHTML='should contain numbers and alphabets'
            }else{
              error3.style.display='none',
                error3.innerHTML=''
            }
        }
        function ConfromPasswordChacking(e){
            const passwordval=passwordid.value;
            const ConformPasswordval=ConformPasswordid.value;
            if(ConformPasswordval.trim()===''){
                error4.style.display='block',
                error4.innerHTML='Please enter the Conform Password'
            }else if(passwordval!=ConformPasswordval){
                error4.style.display='block',
                error4.innerHTML='Password do not matching'
            }else{
                error4.style.display='none',
                error4.innerHTML=''
            }
        }

        document.addEventListener('DOMContentLoaded',function(){
            signform.addEventListener('submit',function(e){
                nameValidateChacking()
                emailValidateChacking();
                passwordValidateChacking();
                ConfromPasswordChacking();
                if(
                    !nameid||
                    !emailid||
                    !passwordid||
                    !error1||
                    !error2||
                    !error3||
                    !error4||
                    !signform

                 ){
                 console.error('one or more element not found')
                 }

                 if(
                    error1.innerHTML || 
                    error2.innerHTML||
                    error3.innerHTML||
                    error4.innerHTML
                 ){
                    e.preventDefault()
                 }
            })
        })
    
    </script>
