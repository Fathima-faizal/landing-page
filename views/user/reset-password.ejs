    <main class="login-container">
        <section class="login-box">
            <h1>Reset Password</h1>
            <form action="/resetPassword" method="post" id="loginForm" autocomplete="off" onsubmit="return validateForm()" >
                <input type="password" name="newPass1" id="newPass1" placeholder="New Password" required autocomplete="new-password">
                 <input type="password" name="newPass2" id="newPass2" placeholder="Current Password" required autocomplete="current-password">
